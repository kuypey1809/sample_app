<% provide :title, t(".title") %>
<% provide :url, user_path(@user) %>
<% provide :button_text, t(".save") %>
<h1><%= t ".description" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), "http://gravatar.com/emails", target: :_blank, rel: :noopener %>
    </div>
  </div>
</div>
